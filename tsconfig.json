{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES6",
    "target": "ES5",
    "allowJs": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitOverride": true
  },
  "include": ["**/*.ts", "**/*.tsx", "webpack.config.js"]
}

{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2022",
    "target": "es2022",
    "allowJs": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,

    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@game/*": ["game/*"],
      "@config/*": ["config/*"],
      "@shared-types/*": ["shared/types/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
